#!/usr/bin/env ruby

begin
  require 'time'
  backup = ARGV[0]
  ls_output = `ls -at /root/.duply-cache/duply_#{backup}`

  time_string = ls_output =~ /to\.(.+?)Z/m && $1
  
  if Time.parse(time_string) > (Time.now - 60*60*24)
    exit 0 # OK
  else
    exit 2 # Critical
  end
rescue => e
  p e
  exit 3 # Unknown
end
